<Window x:Class="Actividad4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividad4"
        mc:Ignorable="d"
        Title="Visor de imágenes" 
        MinHeight="615" MinWidth="750"
        Height="615" Width="750"
        Icon=".\recursos\image.ico">
    <DockPanel LastChildFill="True">
        <DockPanel LastChildFill="False" 
                   DockPanel.Dock="Bottom"
                   Margin="10" 
                   Background="LightBlue">
            <TextBlock 
                DockPanel.Dock="Left"
                Text="Nº de imágenes: 10"
                FontFamily="Rubik"
                FontSize="20"
                Margin="4,15"/>
            <TextBlock 
                DockPanel.Dock="Right"
                Text="Diseñado por Javier Catalá"
                FontFamily="Rubik"
                FontSize="20"
                Margin="4,15" />
        </DockPanel>
        <Border
            DockPanel.Dock="Right"
            BorderThickness="2"
            BorderBrush="Black"
            CornerRadius="3"
            Background="LightGreen"
            Margin="10,10,10,5">
            <DockPanel LastChildFill="False">
                <Button 
                    DockPanel.Dock="Top"
                    Content="Añadir imagen"
                    Margin="5"
                    Width="100"/>
                <Button
                    DockPanel.Dock="Top"
                    Content="Eliminar imagen"
                    Margin="5"
                    Width="100"/>
                <Button
                    DockPanel.Dock="Top"
                    Content="Eliminar todas"
                    Margin="5"
                    Width="100"/>
                <Button
                    DockPanel.Dock="Bottom"
                    Content="Recortar"
                    Margin="5"
                    Width="100" />
                <Button
                    DockPanel.Dock="Bottom"
                    Content="Rotar"
                    Margin="5"
                    Width="100" />
            </DockPanel>
        </Border>
        <TextBlock
            DockPanel.Dock="Top"
            Margin="10"
            Text="Visor de imágenes"
            FontFamily="Rubik"
            FontSize="40"
            TextAlignment="Center" />
        <WrapPanel
            Margin="2,0,0,5">
            <Image
                Source=".\recursos\episodioIV.jpg"
                Width="145"/>
            <Image
                Source=".\recursos\episodioIV.jpg"
                Width="145"/>
            <Image
                Source=".\recursos\episodioIV.jpg"
                Width="145"/>
            <Image
                Source=".\recursos\episodioIV.jpg"
                Width="145"/>
            <Image
                Source=".\recursos\episodioIV.jpg"
                Width="145"/>
            <Image
                Source=".\recursos\episodioIV.jpg"
                Width="145"/>
            <Image
                Source=".\recursos\episodioIV.jpg"
                Height="218"
                Width="145"/>
            <Image
                Source=".\recursos\episodioIV.jpg"
                Width="145"/>
        </WrapPanel>
    </DockPanel>
</Window>
